<%- include('partials/header.ejs');%>

<body>
    <%- include('partials/navbar.ejs');%>

    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/question" class="btn btn-primary">Perguntar</a>
