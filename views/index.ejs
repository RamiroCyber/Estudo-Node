        <div class="card">
            <div class="card-body">
                <h3><%= question.title%></h3>

            </div>
            <div class="card-footer">
                <a href="/question/<%= question.id %>"> <button class="btn btn-success">Responder</button></a>
            </div>
        </div>

        <%}) %>
    </div>

</body>

<%- include('partials/script.ejs');%>